[mysql]
socket                         = __MYSQL_ROOT__/tmp/run/mysqld.sock
password		       = 'mysqladmin'

[mysqld]
basedir                        = __MYSQL_HOME__
back_log                       = 1024
binlog-format                  = STATEMENT
bulk_insert_buffer_size	       = 96M
character-set-server	       = utf8
datadir                        = __MYSQL_ROOT__/data/
default_storage_engine         = InnoDB
expire_logs_days	       = 1
#innodb_adaptive_hash_index_partitions = 4
innodb_blocking_buffer_pool_restore = 1
innodb_buffer_pool_restore_at_startup = 3600
innodb_buffer_pool_instances   = 12
innodb_buffer_pool_size        = __MYSQL_INNODB_BUFFER_POOL_SIZE__
innodb_checksums               = 0
innodb_data_home_dir           = __MYSQL_ROOT__/data
innodb_doublewrite             = 0
innodb_file_format             = Barracuda
innodb_file_format_max         = Barracuda
innodb_file_per_table          = 1
innodb_flush_log_at_trx_commit = 2
innodb_flush_method            = O_DIRECT
innodb_ibuf_accel_rate	       = 100
innodb_ibuf_active_contract    = 1
innodb_ibuf_max_size	       = __MYSQL_INNODB_IBUF_MAX_SIZE__
innodb_io_capacity             = 2000
innodb_lazy_drop_table         = 1
innodb_lock_wait_timeout       = 120
innodb_log_buffer_size         = 64M
innodb_log_files_in_group      = 1 
innodb_log_file_size           = 64M 
innodb_log_group_home_dir      = __MYSQL_ROOT__/data
innodb_random_read_ahead       = 1
innodb_read_ahead	       = both
innodb_read_ahead_threshold    = 16
innodb_read_io_threads         = 3
innodb_stats_update_need_lock  = 0
innodb_thread_concurrency      = 52
innodb_write_io_threads        = 3
key_buffer_size                = 512M
log-bin                        = __MYSQL_ROOT__/binlog/binlog
log-bin-index                  = __MYSQL_ROOT__/binlog/mysql-binlog.idx
log_error                      = __MYSQL_ROOT__/logs/error.log
log-slave-updates              = 1
lower_case_table_names	       = 1
max_allowed_packet             = 64M
max_connect_errors             = 1000000
max_connections                = 500
max_heap_table_size            = __MYSQL_MAX_HEAP_TABLE_SIZE__
myisam_max_sort_file_size      = 512M
myisam_recover                 = FORCE,BACKUP
myisam_sort_buffer_size        = 128M
open_files_limit               = 65535
pid_file                       = __MYSQL_ROOT__/tmp/run/mysqld.pid
port                           = __MYSQL_PORT__
query_cache_type               = 0
query_cache_size               = 0
read_buffer_size	       = 2M
read_rnd_buffer_size	       = 8M
relay-log		       = __MYSQL_ROOT__/relay/mysql
relay-log-index		       = __MYSQL_ROOT__/relay/mysql-relay.idx
replicate-ignore-db	       = mysql
replicate-ignore-db	       = information_schema
replicate-wild-ignore-table    = mysql.%
replicate-wild-ignore-table    = information_schema.%
skip-innodb_adaptive_hash_index
slow-query-log		       = 0
#slow-query-log-file	       = __MYSQL_ROOT__/logs/slow.log
server-id		       = 1300
socket                         = __MYSQL_ROOT__/tmp/run/mysqld.sock
sync_binlog		       = 1
table_definition_cache         = 4096
table_open_cache               = 2048
thread_cache_size              = 96
tmp_table_size                 = __MYSQL_TMP_TABLE_SIZE__
tmpdir			       = __MYSQL_ROOT__/tmp
user                           = __MYSQL_RUNAS__



